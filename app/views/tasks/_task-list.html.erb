<h1>Tasks</h1>
<ul>
  <% tasks.each do |task| %>
    <li>
      <%= link_to task.title, project_task_path(task.project_id, task), id: "task-show" %>
      <%= link_to "Edit", edit_project_task_path(task.project_id, task), remote: true %>
      <%= link_to "Delete", project_task_path(task.project_id, task),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>