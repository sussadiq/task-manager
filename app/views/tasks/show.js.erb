// app/views/tasks/show.js.erb
const div = document.querySelector("#task-card");
console.log("Task show loaded");

if (div) {
  div.innerHTML = "";
  const h1 = document.createElement("h1");
  h1.textContent = "<%= j @task.title %>";
  div.appendChild(h1);
  const p = document.createElement("p");
  p.textContent = "<%= j @task.description %>";
  div.appendChild(p);
}
